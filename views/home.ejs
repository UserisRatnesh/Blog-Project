<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= homePageContent %></p>

<% posts.forEach(function(post) { %>        <!-- We can also use for each loop for iteration.-->
    <h1><%= post.title %></h1>
    <p><%= post.content.substring(0,100) + " ..." %>
        <a href="/posts/<%=post.title%>" >Read more</a>
    </p>
<% }); %>

